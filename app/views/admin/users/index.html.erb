<div class="main posts-index">
  <div class="container">
    <table class="table table-striped table-bordered header-table">
      <thead>
        <tr>
          <th>Id</th>
          <th>User Type</th>
          <th>Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Created_At</th>
          <th>ユーザー削除</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= u.id %></td>
            <td><%#= u.user_type %></td>
            <td>
              <%= link_to u.name, edit_admin_user_path(u) %>
            </td>
            <td><%= u.email %></td>
            <td><%= u.password %></td>
            <td><%= u.created_at %></td>
            <td class="text-center">
            <%= link_to 'Delete', admin_user_path(u), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: 'btn btn-danger btn-new link-color' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
