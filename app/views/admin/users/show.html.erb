<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>

      <%= link_to("編集", edit_admin_user_path(@user)) %>

        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= "タイトル" %></th>
              <th><%= "締め切り" %></th>
              <th><%= "登録日" %></th>
              <th><%= "ステータス" %></th>
              <th><%= "優先度" %></th>
            </tr>
          </thead>
          <tbody>
            <% @user.tasks.each do |task| %>
              <tr>
                <td class="posts-index-item"><%= task.title %></td>
                <td class="posts-index-item"><%= task.deadline %></td>
                <td class="posts-index-item"><%= task.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td class="posts-index-item"><%= task.status%></td>
                <td class="posts-index-item"><%= task.priority%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
