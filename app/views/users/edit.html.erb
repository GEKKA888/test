<div class="main users-edit">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_for(@user, url: user_path(@user), html: {method: "patch"}) do |f| %>
          <p>ユーザー名</p>
          <%= f.text_field :name %>
          <p>メールアドレス</p>
          <%= f.text_field :email %>
          <p>パスワード</p>
          <%= f.password_field :password%>
          <%=submit_tag("保存")%>
        <% end %>
      </div>
    </div>
  </div>
</div>
