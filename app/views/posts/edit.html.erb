<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
      <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>
            <!--タイトル<textarea name="title"></textarea>-->
            タイトル<%= text_field_tag :title ,@post.title%>
          </p>
          <p>
            <!--内容<textarea name="content"></textarea>-->
            内容<%= text_area_tag :content ,@post.content%>
          </p>
          <p>
            <!--締め切り<textarea name="deadline"></textarea>-->
            締め切り<%= date_field_tag :deadline ,@post.deadline%>
          </p>
          <br>
          <input type="submit" value="保存">
        </div>
      </div>
      <% end %>
  </div>
</div>
