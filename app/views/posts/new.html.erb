<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_for(@post, url: posts_path) do |f| %>
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        <p>タイトル</p>
        <%= f.text_field :title %>
        <p>内容</p>
        <%= f.text_area :content %>
        <p>締め切り</p>
        <%= f.date_field :deadline %>
        <br>
        <label><%= f.radio_button(:status, :未着手,{:checked => true})%> 未着手 </label>
        <label><%= f.radio_button(:status, :着手中)%> 着手中 </label>
        <label><%= f.radio_button(:status, :完了)%> 完了 </label>
        <br>優先度
        <label><%= f.radio_button(:priority, :大)%> 大 </label>
        <label><%= f.radio_button(:priority, :中)%> 中 </label>
        <label><%= f.radio_button(:priority, :小)%> 小 </label>
        <br>
        <input class="btn btn-success btn-sm" type="submit" value="投稿">
      </div>
    </div>
    <% end %>
  </div>
</div>
