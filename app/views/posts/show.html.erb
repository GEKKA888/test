<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <h3>
        <%= @post.title%>
      </h3>
      <p>
        <%= @post.content%>
      </p>
      <div class="post-time">
        <%= @post.created_at.strftime("登録日 %Y-%m-%d %H:%M:%S") %>
      </div>
      <div class="deadline">
        締め切り <%= @post.deadline%>
      </div>
      <!--ステータス読み替え-->
      <%if @post.status == 1
        status_trans = "未着手"
      elsif @post.status == 2
        status_trans = "着手中"
      elsif  @post.status == 3
        status_trans = "完了"
        else status_trans = nil
        end%>
      <div class="status">
        ステータス :<%= status_trans%>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>
