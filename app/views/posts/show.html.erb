<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <h3>
        <%= @post.title%>
      </h3>
      <p>
        <%= @post.content%>
      </p>
      <div class="post-time">
        <%= @post.created_at.strftime("投稿日時 %Y-%m-%d %H:%M:%S") %>
      </div>
      <div class="deadline">
        締め切り <%= @post.deadline%>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>
